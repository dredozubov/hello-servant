                    , hello-servant
                    , js-jquery
                    , mtl
                    , safecopy
                    , servant-client
                    , servant-mock
                    , servant-server
                    , text >= 1.2.1.3
                    , transformers >= 0.4.2.0
                    , wai
                    , warp
